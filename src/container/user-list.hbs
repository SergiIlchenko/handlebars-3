<div>
  {{> space}}

  {{> title text="User list"}}
  {{> line}}

  <ul>
    {{#each data.userlist}}
    <li>
      {{> user id=id name=name isAdmin=isAdmin isConfirm=isConfirm balance=balance}}

      <br>
    </li>
    {{/each}}
  </ul>

  {{> space}}

  {{> title text="Top user"}}
  {{> line}}

  <div>
    {{> user id=data.userlist.[0].id name=data.userlist.[0].name isAdmin=data.userlist.[0].isAdmin
    isConfirm=data.userlist.[0].isConfirm balance=data.userlist.[0].balance}}
  </div>
</div>